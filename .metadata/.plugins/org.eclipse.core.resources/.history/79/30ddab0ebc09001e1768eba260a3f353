server:
  port: 9090
  
spring:
  application:
    name: Api-Gateway
    
  cloud:
    gateway:
      routes:
      - id: BOOK-SERVICE
        uri:
          lb://BOOK-SERVICE
        predicates:
        - Path=/book/**
        
      - id: CART-SERVICE
        uri:
          lb://CART-SERVICE
        predicates:
        - Path=/cart/** 
      - id: CUSTOMER-SERVICE
        uri:
          lb://CUSTOMER-SERVICE
        predicates:
        - Path=/cust/**,/customer/**
        
eureka:
  instance:
    prefer-ip-address: true
  client:
    fetch-registry: true
    register-with-eureka: true
    service-url:
      defaultZone: http://localhost:8761/eureka
        